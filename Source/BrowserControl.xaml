<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DocSpy.BrowserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DocSpy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:JSBackgroundConverter x:Key="JSBackgroundConverter"/>
    </UserControl.Resources>
    <Grid x:Name="BrowserAndToolbar">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="BrowserToobar" Margin="0 4 0 12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="92" />
                <ColumnDefinition Width="92" />
                <ColumnDefinition Width="92" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Button
                        x:Name="BackButton"
                        Grid.Column="0"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="BackButton_Click">
                <FontIcon Glyph="&#xE72B;" />
            </Button>
            <Button
                        x:Name="FwdButton"
                        Grid.Column="1"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="OnFwdClicked">
                <FontIcon Glyph="&#xE72A;" />
            </Button>
            <Button                                   
                        x:Name="ReloadButton"
                        Grid.Column="2"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="OnReloadClicked">
                <FontIcon Glyph="&#xE72C;" />
            </Button>
            <Button
                        Content = "REBUILD"
                        x:Name="RebuildButton"
                        Grid.Column="4"
                        Background="DarkRed"
                        BorderBrush="Black"
                        BorderThickness="0.5"
                        Foreground="White"
                        ToolTipService.ToolTip="Rebuild the current site using the associated doc generator."
                        HorizontalAlignment="Stretch"
                        Margin="4,0,4,0"
                        Click="RebuildButton_Clicked">
            </Button>
            <Button
                        Content = "EDIT"
                        x:Name="EditButton"
                        Grid.Column="5"
                        Style="{ThemeResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        ToolTipService.ToolTip="Edit the current page in the associated editor."
                        Margin="4,0,4,0"
                        Click="EditButton_Clicked">
            </Button>
            <DropDownButton
                        Content = "OPEN"
                        x:Name="OpenButton"
                        Grid.Column="6"
                        Style="{ThemeResource AccentButtonStyle}"
                        ToolTipService.ToolTip="Open the current site in file explorer or web browser."
                        HorizontalAlignment="Stretch"
                        Margin="4,0,4,0"
                        >
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem x:Name = "OpenInExplorerButton" Text="In file explorer" Click="OpenInExplorerButton_Click"/>
                        <MenuFlyoutItem x:Name = "OpenInBrowser" Text="In web broswer" Click="OpenInBrowser_Click"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>

            </DropDownButton>
            <Button
                        x:Name="SizeButton"
                        Grid.Column="7"
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Resize the browser to fit the selected device size."
                        >
                        <FontIcon Glyph="&#xE8EA;"/>
                        <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem x:Name="PhoneButton" Text="Size to phone" Click="PhoneButton_Click"/>
                                <MenuFlyoutItem x:Name="TabletButton" Text="Size to tablet" Click="TabletButton_Click"/>
                                <MenuFlyoutItem x:Name="DesktopButton" Text="Size to desktop" Click="DesktopButton_Click"/>
                    </MenuFlyout>
                        </Button.Flyout>
            </Button>
            <Button
                        x:Name="DarkModeButton"
                        Grid.Column="8"
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="See docs in dark or light mode."
                        Click="DarkModeButton_Click">
                <FontIcon Glyph="{x:Bind local:BrowserControl.DarkModeIcon, Mode=OneTime}"/>
            </Button>
            <Button
                        x:Name="JsButton"
                        Grid.Column="9"
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Enable or disable Javascript"                        
                        Click="JsButton_Click">
                <Grid>
                    <FontIcon Glyph="&#xE99A;" />
                    <FontIcon Glyph="&#xF78A;" Foreground="{x:Bind local:Settings.Instance.ViewModel.IsJsEnabled , Converter={StaticResource JSBackgroundConverter} , Mode=OneWay}" />
                </Grid>
            </Button>
            <Button
                        x:Name="LogButton"
                        Grid.Column="10"
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Show server logs."
                        Click="LogButton_Click">
                <FontIcon Glyph="&#xe9a4;"/>
            </Button>

            <Button
                        x:Name="SettingsButton"
                        Grid.Column="11"
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Settings"
                        Click="SettingsButton_Click">
                <FontIcon Glyph="&#xE713;" />
            </Button>


            <AutoSuggestBox 
                        x:Name="UrlEntry"
                        Grid.Column="3"
                        GotFocus="UrlEntry_GotFocus"
                        LostFocus="UrlEntry_LostFocus"
                        Margin="4,0,4,0"
                        TextChanged="UrlEntry_TextChanged">
            </AutoSuggestBox>
        </Grid>
        <WebView2
                 Grid.Row="1"
                 x:Name="WebView"
                 Source="{x:Bind local:Settings.Instance.ViewModel.BrowserUrl, Mode=OneTime}"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
         
                 NavigationCompleted="WebView_Navigated"
                 NavigationStarting="WebView_Navigating"
            />
    </Grid>

</UserControl>
